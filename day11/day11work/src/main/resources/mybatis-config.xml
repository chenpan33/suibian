<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">


<configuration>

    <!--加载properties 配置文件-->
    <properties resource="jdbc.properties"/>


    <!--日志配置-->
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>

    <!--<typeAliases>-->
    <!--&lt;!&ndash;<typeAlias type="com.cskaoyan.dto.User" alias="user"/>&ndash;&gt;-->
    <!--<package name="com.cskaoyan"/>-->
    <!--</typeAliases>-->


    <!-- 这个是环境配置-->
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/day10?useSSL=flse"/>
                <property name="username" value="root"/>
                <property name="password" value="123456"/>
            </dataSource>
        </environment>
    </environments>


    <!-- 把 我们自己写的UserMapper.xml 注册进来-->
    <mappers>

        <package name="com.cskaoyan.mapper"/>

    </mappers>


</configuration>
